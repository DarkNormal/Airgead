<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.marklordan.airgead.ui.TransactionActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/transaction_desc_input_wrapper"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/transaction_desc_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/transaction_description_title"
            android:inputType="textAutoComplete"
            android:maxLength="30"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/transaction_value_input_wrapper"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transaction_desc_input_wrapper"
        tools:layout_editor_absoluteY="16dp">

        <EditText
            android:id="@+id/transaction_value_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/transaction_amount_title"
            android:inputType="numberDecimal"
            android:maxLength="30"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/transaction_date_input_wrapper"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transaction_value_input_wrapper">

        <EditText
            android:id="@+id/transaction_date_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/transaction_date_title"
            android:inputType="date"
            android:maxLength="30"/>

    </android.support.design.widget.TextInputLayout>

    <Switch
        android:id="@+id/transaction_type_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:checked="false"
        android:showText="true"
        android:splitTrack="false"
        android:switchPadding="16dp"
        android:text="Income / Expense"
        android:textIsSelectable="false"
        android:textOff="Income"
        android:textOn="Expense"
        tools:checked="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/transaction_date_input_wrapper"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/transaction_value_input_wrapper"/>

    <Button
        android:id="@+id/save_transaction_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Add Transaction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/cancel_transaction_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:text="Cancel"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintLeft_toRightOf="@+id/save_transaction_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/save_transaction_button"/>

</android.support.constraint.ConstraintLayout>
